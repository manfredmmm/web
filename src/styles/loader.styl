.loading
  opacity 1
  background-color m-white
  .u-centered-content
    width 100%
    height 100%
[ng-cloak]
  display none !important
// ----------------------------------------
// Loader icon
// ----------------------------------------
.loader,
.loader:before,
.loader:after
  border-radius 50%
.loader
  position relative
  width rem(40px)
  height rem(40px)
  color darkest-grey
  box-shadow inset 0 0 0 3px
  transform translateZ(0)
.loader:before,
.loader:after
  position absolute
  content ''
.loader:before
  top rem(-1px)
  left rem(-1px)
  width rem(22px)
  height rem(42px)
  border-radius rem(42px) 0 0 rem(42px)
  transform-origin rem(22px) rem(21px)
  background m-white
  animation spin 2s 1.5s infinite ease
.loader:after
  top rem(-1px)
  left rem(21px)
  width rem(22px)
  height rem(42px)
  border-radius 0 rem(42px) rem(42px) 0
  transform-origin 0 rem(21px)
  background m-white
  animation spin 2s 0s infinite ease
