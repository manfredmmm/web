a.home.black.z-index10(href="http://localhost:8080")
.menu(ng-controller="sidebarController")
  a.burger.z-index10(ng-click="toggleSidebar()" ng-show="!sidebarActive" href)
    img(ng-src="/images/icons/burger.svg")
  .sidebar.z-index10(ng-class="{ active: sidebarActive }")
    a.close(ng-click="toggleSidebar()" ng-show="sidebarActive" href)
      img(ng-src="/images/icons/close.svg")
    nav
      ul.nav
        li.active(ng-repeat="page in pages")
          a(ng-click="goTo($index)" ng-class="{ active: isCurrentPage(page.name) }" href) 
            span.binary {{ page.binary }}
            span - {{ page.title }}
a.nav.previous.black.z-index10(ng-click="previous()" href ng-hide="isCurrentPage('home')")
a.nav.next.black.z-index10(ng-click="next()" href ng-hide="isCurrentPage('social')")
