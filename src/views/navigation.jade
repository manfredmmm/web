a.home.z-index10(href="http://localhost:8080" ng-class="currentPageStyle" ng-hide="isCurrentPage('home')")
.menu
  a.nav-toggle.z-index10(ng-click="toggleMenu()" ng-class="{ 'white': currentPageStyle === 'white', 'black': currentPageStyle === 'black', 'active': menuActive }")
    span
  .options.z-index9(ng-class="{ active: menuActive }")
    nav
      ul.nav
        li.active(ng-repeat="page in pages")
          a(ng-click="goTo($index)" ng-class="{ active: isCurrentPage(page.name) }") 
            span.binary {{ page.binary }}
            span - {{ page.title }}
a.nav.nav-previous.z-index10(ng-class="currentPageStyle" ng-hide="isCurrentPage('home')")
  h6 {{ pages[currentPage-1].binary }} - {{ pages[currentPage-1].title }}
a.nav.nav-next.z-index10(ng-class="currentPageStyle" ng-hide="isCurrentPage('contact')")
  h6(ng-hide="isCurrentPage('home')") 
    | {{ pages[currentPage+1].binary }} - {{ pages[currentPage+1].title }}
