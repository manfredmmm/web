section
  width 100%
  height 100vh
  background-size cover
  background-position center
  position absolute
section.front
  top 0
  left 0
  svg
    position absolute
    top 30%
    left 50%
    width 20%
    margin-left -12%
    margin-top -12%
    min-width 175px
    stroke white
  .text
    position absolute
    width 100%
    height 125px
    padding-top 25px
    bottom 5%
    opacity 0
    animation fadeInUp .5s 2s
  h1
    margin-bottom 15px
  .u-bold
    margin-right 10px
  video
    position fixed
    top 50%
    left 50%
    min-width 100%
    min-height 100%
    width auto
    height auto
    transform translateX(-50%) translateY(-50%)
    -webkit-transform: translateX(-50%) translateY(-50%)
    background-color darkest-grey
    background-size cover
    animation fadeIn
section.me
  background-image url('/images/me.jpg')
  animatiom fadeInUp 1s 0s
section.cat
  background-image url('/images/cat.jpg')
  animatiom fadeInUp 1s 0s
section.car
  background-image url('/images/car.jpg')
section.dino
  background-image url('/images/dinosaur.jpg')
section.kelly
  background-image url('/images/kelly.jpg')
  background-position center bottom
section.montserrat
  background-position center bottom
  background-image url('/images/montserrat.jpg')
section.contact
  background-color darkest-grey
.social
  li
    display inline
    margin-right 10px
    text-align center
  a
    display inline-block
    color darkest-grey
    width 30px
    height 30px
    background-color dark-grey
    border-radius 30px
    line-height 32px
