  svg
    position relative
    center(75%)
    margin-bottom 50px
  .text
    animation fadeIn 1s 1.5s
    color m-grey
  h2
    font-size fontSize-smaller
    margin-bottom 0
  .u-bold
    margin-right 10px
section.me
  padding 0 60px
  background-color dark-white
  .image,
  .text
    col(1/2)
    height 100%
    animation fadeInRight .4s .2s
  .image
    background-image url("/images/manfred-background.png")
    background-size 35%
    background-position center bottom
    background-repeat no-repeat
  .text
    display flex
    align-items center
    justify-content center
  .content
    margin-top 36%
section.can
  background-color dark-white
  display flex
  align-items center
  justify-content center
  .skills-table
    center(70%)
    min-width 960px
    animation fadeInRight .4s .2s
    color dark-white
  .header
    width 100%
    height 80px
    background-color darkest-grey
    margin-bottom 5px
    display flex
    align-items center
    justify-content center
  label,
  input,
  span.question
    display inline-block
  label
    font-size fontSize-largest
    font-family type-raleway--regular
  input
    appearance none
    border-radius 0
    width 40%
    min-width 190px
    outline 0
    border none
    padding 10px 7px
    font-family type-raleway--regular
    font-size fontSize-small
    color dark-white
    background-color darkest-grey
    border-bottom 1px solid light-grey
    text-align center
    transition-duration .2s
    margin 0 rem(20px) 0 rem(20px)
    &:hover,
    &:focus
      background-color lighten(darkest-grey, 10%)
  span.question
    font-size fontSize-largest
    font-family type-raleway--regular
  .content
    position relative
    font-family type-raleway--regular
    width 100%
    height 500px
    background-color m-grey
    padding 20px
  li.family
    col(1/3, cycle: 3)
    margin-bottom 20px
  a
    cursor pointer
    transition-duration .4s
    &:hover
      color dark-grey
  ul.skills
    list-style-type square
    font-size fontSize-small
    li
      margin-bottom 3px
      margin-left 20px
  a.back
    position absolute
    top 20px
    right 20px
    i
      padding-right 5px
    span
      font-size fontSize-base
  .skill-level
    width 100%
    height 100%
    margin-top 40px
  p.hint
    font-family type-raleway--thin
    font-size fontSize-smaller
    position absolute
    bottom 20px
    right 20px
    color darkest-grey
  span.level
    font-size fontSize-smallest
    margin 0 rem(5px)
  span.number
    font-size fontSize-largest
  .skill-content
    width 100%
  li.level
    col(1/10)
    height 0
    padding-bottom 7.3%
    background-color rgba(m-white, .8)
    &.uncompleted
      background-color rgba(m-white, .4)
      svg
        opacity 0
    &:last-child
      margin-right 0
    span
      font-size fontSize-smallest
      display block
      margin-top rem(10px)
section.contact
  background-color darkest-grey
  .u-centered-content
    animation fadeInRight .4s .2s
  h2
    color lightless-grey
    position relative
    display block
    margin-bottom rem(30px)
    padding-left rem(15px)
    padding-right rem(15px)
    padding-bottom rem(10px)
  h2:before
    animation borderBottom .4s .6s
    content ""
    position absolute
    width 100%
    height 2px
    bottom 0
    left 0
    background-color lightless-grey
    transition all .3s ease-in-out 0s
  a.mail
    color lightless-grey
    text-decoration none
    display block
    margin-bottom rem(120px)
ul.social
  li
    display inline
    margin-right rem(10px)
    text-align center
  li:last-child
    margin-right 0
  a
    display inline-block
    color darkest-grey
    width 32px
    height 32px
    background-color m-grey
    border-radius 32px
    line-height 33px
    transition-duration .4s
  a:hover
    background-color light-grey

.frame
  width 100vw
  height 100vh
  li.page
    float left
