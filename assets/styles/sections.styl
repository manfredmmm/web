section
  width: 100%
  height: 100vh
  background-size cover
  background-position center
section.front
  background-color darkest-grey
  background-image url('/images/mmm.svg')
  background-size 15%
  background-repeat no-repeat
  h1
    padding-top: 300px
    font-size: .8em
section.me
  background-image url('/images/me.jpg')
section.cat
  background-image url('/images/cat.jpg')
section.car
  background-image url('/images/car.jpg')
section.dino
  background-image url('/images/dinosaur.jpg')
section.kelly
  background-image url('/images/kelly.jpg')
  background-position center bottom
section.montserrat
  background-position center bottom
  background-image url('/images/montserrat.jpg')
section.contact
  background-color darkest-grey
.social
  li
    display inline
    margin-right 10px
    text-align center
  a
    display inline-block
    color darkest-grey
    width 30px
    height 30px
    background-color dark-grey
    border-radius 30px
    line-height 32px
