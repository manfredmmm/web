html,
body
  font-size 16px
  font-family "Raleway Thin"
  color light-grey
  height 100%
  text-rendering optimizelegibility
  -webkit-font-smoothing antialiased
  -moz-osx-font-smoothing grayscale
.content
  display table
  width 100%
  height 100%
.container
  display table-cell
  text-align center
  vertical-align middle
a.home
  background-image url('/images/icons/mmm-triangles.svg')
  background-size 100%
  background-repeat no-repeat
  background-position center
  position fixed 
  top 15px
  left 20px
  width 40px
  height 40px
  display block
