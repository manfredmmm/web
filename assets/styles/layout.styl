html,
body
  font-size 16px
  font-family "Raleway Thin"
  color light-grey
  height 100%
  text-rendering optimizelegibility
  -webkit-font-smoothing antialiased
  -moz-osx-font-smoothing grayscale
  background-color my-grey
.content
  display table
  width 100%
  height 100%
.container
  display table-cell
  text-align center
  vertical-align middle
a.home
  background-image url('/images/icons/mmm-triangles.svg')
  background-size 100%
  background-repeat no-repeat
  background-position center
  position fixed
  top 15px
  left 20px
  width 30px
  height 20px
  display block
  animation fadeIn
a.nav
  width 50px
  height 50px
  position fixed
  left calc(50% - 25px)
  background-color red
a.next
  bottom 0
a.previous
  top 0
ul.nav
  position absolute
  right 0
  top 45%
