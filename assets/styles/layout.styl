html,
body
  font-size 16px
  font-family "Raleway Thin"
  color light-grey
  height 100%
  text-rendering optimizelegibility
  -webkit-font-smoothing antialiased
  -moz-osx-font-smoothing grayscale
  background-color my-grey
.content
  display table
  width 100%
  height 100%
.container
  display table-cell
  text-align center
  vertical-align middle
a.home
  background-image url('/images/icons/mmm-triangles.svg')
  background-size 100%
  background-repeat no-repeat
  background-position center
  position fixed
  top 15px
  left 20px
  width 30px
  height 20px
  display block
  animation fadeIn
a.nav
  width 50px
  height 40px
  position fixed
  left calc(50% - 25px)
a.next
  bottom 0
  background-image url('/images/icons/down.svg')
  background-repeat no-repeat
a.previous
  top 0
  background-image url('/images/icons/up.svg')
  background-repeat no-repeat
  background-position bottom
nav
  position absolute
  right 0
  top 45%
  a
    color my-grey
    text-decoration none
  a.active
    color red
a.menu,
a.close
  background-size 100%
  background-repeat no-repeat
  background-position center
  position fixed
  top 15px
  right 20px
  width 20px
  height 20px
  display block
  animation fadeIn
