html,
body
  font-size 16px
  font-family "Montserrat"
  color grey
  height 100%
  text-rendering optimizelegibility
  -webkit-font-smoothing antialiased
  -moz-osx-font-smoothing grayscale
.content
  display table
  width 100%
  height 100%
.container
  display table-cell
  text-align center
  vertical-align middle
a.home
  background-image url('/images/mmm-triangles.svg')
  background-size 100%
  background-repeat no-repeat
  position fixed 
  top: 25px
  left: 25px
  width: 50px
  height: 50px
  display: block
