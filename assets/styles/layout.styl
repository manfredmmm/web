html
  font-size 16px
  font-family "Raleway Thin"
  color light-grey
  height 100%
  text-rendering optimizelegibility
  -webkit-font-smoothing antialiased
  -moz-osx-font-smoothing grayscale
  background-color my-grey
.content
  display table
  width 100%
  height 100%
.container
  display table-cell
  text-align center
  vertical-align middle
a.home
  background-image url('/images/icons/mmm-triangles.svg')
  background-size 100%
  background-repeat no-repeat
  background-position center
  position fixed
  top 15px
  left 20px
  width 30px
  height 20px
  display block
  animation fadeIn
a.nav
  width 50px
  height 40px
  position fixed
  left calc(50% - 25px)
a.next
  bottom 0
  background-image url('/images/icons/down.svg')
  background-repeat no-repeat
a.previous
  top 0
  background-image url('/images/icons/up.svg')
  background-repeat no-repeat
  background-position bottom
.sidebar
  position absolute
  width 100%
  height 100%
  top -1600px
  background-color rgba(white)
  transition-duration .4s
  set-font-size(28px)
  display flex
  align-items center
  justify-content center
  &.active
    top 0
  a
    color my-grey
    text-decoration none
    display block
  a:hover
    color darken(my-grey, 25%)
  a.active
    border-bottom 1px solid light-grey
  li
    transition-duration .4s
    margin-bottom: 5px
  span.binary
    width 58px
    display inline-block
a.burger,
a.close
  background-size 100%
  background-repeat no-repeat
  background-position center
  position fixed
  top 15px
  right 20px
  width 20px
  height 20px
  display block
a.menu
  animation fadeIn
a.close
  animation fadeIn
