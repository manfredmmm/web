body
  font-size 16px
  font-family type-raleway--regular
  color dark-grey
  text-rendering optimizelegibility
  -webkit-font-smoothing antialiased
  -moz-osx-font-smoothing grayscale
  background-color white
*
  box-sizing border-box
@media mobile
  body
    font-size 13px
a.home
  &.white
    background-image url('/images/icons/mmm-triangles-white.svg')
  &.black
    background-image url('/images/icons/mmm-triangles-black.svg')
  background-size 100%
  background-repeat no-repeat
  background-position center
  position fixed
  top 13px
  left 15px
  width 30px
  height 25px
  display block
  animation fadeIn
a.right
  position absolute
  right 55px
  top calc(50vh - 8px)
  display inline-block
  opacity 0
a.nav
  position fixed
  width 40px
  height calc(100vh - 100px)
  top 50px
  background-repeat no-repeat
  background-size 100%
  animation fadeIn
  background-size 100%
  line-height 35px
  cursor pointer
  h6
    position absolute
    top 60vh
    width 210px
    height 30px
    opacity 0
a.nav-next
  right 10px
  background-position center right
  &.black
    background-image url('/images/icons/right-black.svg')
  &.white
    background-image url('/images/icons/right-white.svg')
    h6
      color m-white
  &:hover
    h6
      animation fadeIn .2s 0s
  h6
    right -90px
    transform rotate(90deg)
a.nav-previous
  left 10px
  background-position center left
  &.black
    background-image url('/images/icons/left-black.svg')
  &.white
    background-image url('/images/icons/left-white.svg')
    h6
      color m-white
  &:hover
    h6
      animation fadeIn .2s 0s
  h6
    left -90px
    transform rotate(-90deg)
    text-align right
.options
  position fixed
  width 100%
  height 100%
  top -1600px
  background-color rgb(m-white)
  transition-duration .8s
  set-font-size(28px)
  display flex
  align-items center
  justify-content center
  &.active
    top 0
  a
    color m-grey
    text-decoration none
    display block
    border-bottom 1px solid transparent
    transition-duration .2s
    cursor pointer
    font-weight fontWeight-7
    padding 0 10px
  a:hover
    color darken(m-grey, 25%)
  a.active
    border-bottom 1px solid lighten(m-grey, 30%)
  li
    transition-duration .4s
    margin-bottom: 5px
  span.binary
    width 58px
    display inline-block
a.nav-toggle
  position fixed
  top 15px
  right 20px
  padding 10px 25px 13px 0px
  cursor pointer
  span,
  span:before,
  span:after
    position absolute
    height 2px
    width 25px
    display block
    background m-white
    cursor pointer
    content ''
  span:before
    top -7px
  span:after
    bottom -7px
  span,
  span:before,
  span:after
    transition all .4s ease-in-out
  &.active
    &.white,
    &.black
      span
        background transparent
      span:before,
      span:after
        background dark-grey
  &.active span:before,
  &.active span:after
    top 0
  &.active span:before
    transform rotate(45deg)
  &.active span:after
    transform rotate(-45deg)
  &.white
    span,
    span:before,
    span:after
      background m-white
  &.black
    span,
    span:before,
    span:after
      background dark-grey
.dragged
  cursor move
