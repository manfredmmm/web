@import reset
@import jeet
@import fonts
@import colors
@import animations
@import section

html,
body
  font-size 16px
  font-family "Montserrat"
  color grey
  height 100%
  text-rendering   optimizelegibility
  -webkit-font-smoothing antialiased
  -moz-osx-font-smoothing grayscale
.content
  display table
  width 100%
  height 100%
.container
  display table-cell
  text-align center
  vertical-align middle
h1, h2
  font-family "Montserrat"
  font-size 3em
  font-weight 400
.u-centered
  text-align center
ul
  list-style none
.social
  li
    display inline
    margin-right 10px
    text-align center
  a
    display inline-block
    color beige
    width 30px
    height 31px
    background-color grey
    border-radius 30px
    font-size 1.3em
    line-height 35px
a.home
  background-image url('/images/mmm-triangles.svg')
  background-size 100%
  background-repeat no-repeat
  position fixed 
  top: 25px
  left: 25px
  width: 50px
  height: 50px
  display: block
