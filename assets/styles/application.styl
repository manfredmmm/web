@import "reset"
@import "jeet"
@import "fonts"
@import "colors"
@import "animations"

html,
body
  //background-color beige
  font-size 16px
  font-family "Source Sans Light"
  color grey
  height 100%

.content
  display table
  width 100%
  height 100%

.container
  display table-cell
  text-align center
  vertical-align middle

.centered
  center(250px)
  //animation(foo)
  foo()

img.avatar
  col(1/2)
  border-radius 500px

h1
  col(1/2)
  font-family "Source Sans Light"
  font-size 1.8em
  font-weight 400
  text-align left
  line-height 1.5

.u-centered
  text-align center

ul
  list-style none

.social
  li
    display inline
    margin-right 10px
    text-align center

a
  display inline-block
  color beige
  width 30px
  height 31px
  background-color grey
  border-radius 30px
  font-size 1.3em
  line-height 35px
