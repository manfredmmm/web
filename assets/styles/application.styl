@import "reset"
@import "jeet"
@import "fonts"
@import "colors"
@import "animations"
@import "section"

html,
body
  font-size 16px
  font-family "Source Sans Light"
  color grey
  height 100%

.overlay
   background-color: rgba(0,0,0, grey)
   z-index: 1
   width: 100%
   height: 100%
   position: fixed
   top: 0
   left: 0

.content
  display table
  width 100%
  height 100%
  background-color rgba(0, 0, 0, .7)

.container
  display table-cell
  text-align center
  vertical-align middle

h1, h2
  font-family "Source Sans Light"
  font-size 3em
  font-weight 400
  text-align left
  line-height 1.5
  z-index 2

.u-centered
  text-align center

ul
  list-style none

.social
  li
    display inline
    margin-right 10px
    text-align center

a
  display inline-block
  color beige
  width 30px
  height 31px
  background-color grey
  border-radius 30px
  font-size 1.3em
  line-height 35px
