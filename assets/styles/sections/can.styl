section.can
  background-color dark-white
  display flex
  align-items center
  justify-content center
  .skills-table
    center(70%)
    min-width 910px
    color dark-white
  .header
    width 100%
    height 80px
    background-color darkest-grey
    margin-bottom 5px
    display flex
    align-items center
    justify-content center
  label,
  input,
  span.question
    display inline-block
  input
    appearance none
    border-radius 0
    width 40%
    min-width 190px
    outline 0
    border none
    padding 10px 7px
    color dark-white
    background-color darkest-grey
    border-bottom 1px solid light-grey
    text-align center
    transition-duration .2s
    margin 0 rem(20px) 0 rem(20px)
    font-family 'Raleway Regular'
    &:hover,
    &:focus
      background-color lighten(darkest-grey, 10%)
  .content
    width 100%
    height 500px
    background-color m-grey
    padding 20px 20px 50px 20px
    position relative
  li.family
    col(1/3, cycle: 3)
    margin-bottom 20px
  a
    cursor pointer
    transition-duration .4s
    &:hover
      color dark-grey
  ul.skills
    list-style-type square
    li
      margin-bottom 3px
      margin-left 20px
  a.back
    position absolute
    top 20px
    right 20px
    i
      padding-right 5px
  .skill-level
    width 100%
    height 100%
    margin-top rem(30px)
  p.hint
    font-family type-raleway--thin
    position absolute
    bottom 20px
    right 20px
    color darkest-grey
    margin-left 20px
  span.level
    margin 0 rem(5px)
  .skill-content
    width 100%
    margin-bottom rem(40px)
  ol.levels
    cf()
    margin-bottom rem(100px)
  li.level
    col(1/10)
    height 0
    padding-bottom 7.3%
    background-color rgba(m-white, .8)
    &.uncompleted
      background-color rgba(m-white, .4)
      svg
        opacity 0
    &:last-child
      margin-right 0
    span
      display block
      margin-top rem(10px)
@media mobile
  section.can
    height auto
    min-height calc(100vh - 12px)
    .skills-table
      margin-top 10%
      min-width 75%
      center(100%)
    .header
      height 50px
      padding rem(15px)
    .content
      height auto
      margin-bottom 5px
      padding 5px 5px 20px 5px
    label,
    input,
    span.question
      display block
    label
      font-size fontSize-base
    span.question
      font-size fontSize-base
    input
      min-width 60%
      padding 7px 3px
      margin 0 3px
    ul.skills
      cf()
      font-size fontSize-smallest
    ol.levels
      margin-bottom 0
    ul
      cf()
    p.hint
      font-size fontSize-smallest
      right 5px
      bottom 5px
    li.family
      margin-right 1%
      margin-bottom 5px
    h4
      font-size fontSize-smallest
@media mobile-landscape
  section.can
    .skills-table
      margin-top 1.5%
@media mobile-portrait
  section.can
    .skills-table
      center(75%)
    li.family
      col(1/2, uncycle: 3, cycle: 2)
@media tablet-portrait
  section.can
    .skills-table
      center(100%)
      min-width 75%
